class Solution:
    def new21Game(self, n: int, k: int, maxPts: int) -> float:
        dp=[None]*(k+maxPts)

        for i in range(k,k+maxPts):
            if i<=n:
                dp[i]=1.0
            else:
                dp[i]=0

        window=0.0
        for i in range(maxPts):
            window+=dp[k+i]

        for i in range(k-1,-1,-1):
            dp[i]=window/maxPts
            window+=dp[i]
            window-=dp[i+maxPts]
        return dp[0]
        
